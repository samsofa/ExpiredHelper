<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/container"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="4dp"
  android:layout_marginTop="4dp"
  android:layout_marginEnd="4dp"
  app:cardCornerRadius="10dp"

  app:cardElevation="7dp"
  tools:targetApi="p">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
      android:id="@+id/txv_item_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:maxLines="1"
      android:text="011055"
      android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
      android:id="@+id/txv_days_to_expire"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:background="@drawable/expire_date_background"
      android:gravity="center"
      android:maxLines="1"
      android:text="25"
      android:textAppearance="@style/TextAppearance.AppCompat.Large"
      android:textColor="@color/white" />

    <TextView
      android:id="@+id/txv_item_supplier"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/txv_item_name"
      android:text="idf"
      android:textAllCaps="true"
      android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    <TextView
      android:id="@+id/txv_expire_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/txv_item_name"
      android:layout_centerHorizontal="true"
      android:layout_marginStart="57dp"
      android:layout_marginTop="0dp"
      android:text="21/02/2020"
      android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

  </RelativeLayout>
</androidx.cardview.widget.CardView>